<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="location_edittext_preference"
        android:title="@string/location_title_edittext_preference"
        android:summary="@string/location_summary_edittext_preference"
        android:dialogTitle="@string/location_dialog_title_edittext_preference"
        android:defaultValue="@string/default_location_zipcode"/>

    <ListPreference
        android:key="units_list_preference"
        android:title="@string/units_title_list_preference"
        android:summary="@string/units_summary_list_preference"
        android:entries="@array/units_entries_list_preference"
        android:entryValues="@array/units_entryvalues_list_preference"
        android:dialogTitle="@string/units_dialog_title_list_preference"
        android:defaultValue="@string/default_unit_preference"/>

</PreferenceScreen>